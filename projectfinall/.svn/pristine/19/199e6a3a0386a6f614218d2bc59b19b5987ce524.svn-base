.login-nav{
    margin:20px 0;
    display:flex;
    justify-content:space-around;
    color:rgb(212,47,47);

}
.login-navText1{
    font-size:0.3rem;
    width:33%;
    text-align:center;
}
.login-navText2{
    width:33%;
    text-align:right;
    padding-right: 0.4rem;
    font-size: 0.2rem;
    padding-top: 0.1rem;
}
.login-navImg{
    width:33%;
    text-align:left;
    padding-left: 0.4rem;
}
.login-navImg img{
    width: 6%;
}

.login-content{
    background-image: url("../img/login-2.png");
    background-size: 100%;
    padding-bottom: 4rem;
}
.login-head{
    width: 25%;
    margin:  auto;
    padding-top: 0.8rem;
    padding-bottom: 0.5rem;
}
.login-head img{
    width: 100%;
}
.login-content input{
    background: rgba(255,255,255,0.5);
    border: none;
    border-radius: 0.07rem;
    width: 90%;
    height: 0.8rem;
    letter-spacing: 0.04rem;
    padding-left: 0.4rem;
    font-size: 0.25rem;
    margin-bottom: 0.25rem;
}
.login-content input::-webkit-input-placeholder{
    color: white;
}
.login-btn{
    width: 90%;
    height: 0.8rem;
    background: white;
    border: none;
    border-radius: 0.07rem;
    color: rgb(212,47,47);
    font-size: 0.3rem;
    margin: 0.3rem 0;
}
.login-content p{
    color: white;
    text-decoration: underline;
    text-align: right;
    font-size: 0.25rem;
    margin-right: 0.4rem;
    letter-spacing: 0.03rem;
}




















